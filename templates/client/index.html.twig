{% extends 'base.html.twig' %}


{% block title %}Client index{% endblock %}

{% block body %}
   <div style=" text-align: center; margin: 0px auto; display; block; "> <h1>Client index</h1></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nom_Complet</th>
                <th>Nom_charge_dossier</th>
                <th>Description</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.Name }}</td>
                <td>{{ client.NomComplet }}</td>
                <td>{{ client.NomChargeDossier }}</td>
                <td>{{ client.description }}</td>
                <td>{{ client.pays }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
