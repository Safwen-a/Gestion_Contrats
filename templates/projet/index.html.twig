{% extends 'base.html.twig' %}

{% block title %}Projet index
{% endblock %}

{% block body %}
	<!-- DataTales -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Projet index</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Id</th>
							<th>Cluster</th>
							<th>Nom_projet</th>
							<th>Nom_charge_dossier</th>
							<th>Lieu_intervention</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for projet in projets %}
							<tr>
								<td>{{ projet.id }}</td>
								<td>{{ projet.Cluster }}</td>
								<td>{{ projet.NomProjet }}</td>
								<td>{{ projet.NomChargeDossier }}</td>
								<td>{{ projet.LieuIntervention }}</td>
								<td>
									<a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
									<a href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path('app_projet_new') }}">Create new</a>
{% endblock %}
